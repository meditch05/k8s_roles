kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: registry-pvc
  namespace: {{ namespace }}
  labels:
    kubernetes.io/cluster-service: "true"
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: {{ storage }}Gi
  selector:
    matchLabels:
      volume-task: registry
